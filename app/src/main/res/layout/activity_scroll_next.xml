<?xml version="1.0" encoding="utf-8"?>
<com.example.ybk.mybehaviordemo.nextScroll.ScrollNextContainerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:orientation="vertical"
    tools:context="com.example.ybk.mybehaviordemo.nextScroll.ScrollNextActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.ybk.mybehaviordemo.nextScroll.ScrollChildContainerLayout
            android:id="@+id/child_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#a74c4c">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="00000000000000"
                android:textSize="100sp" />
            <!--<include layout="@layout/content_scrolling" />-->
        </com.example.ybk.mybehaviordemo.nextScroll.ScrollChildContainerLayout>

        <com.example.ybk.mybehaviordemo.nextScroll.ScrollChildContainerLayout
            android:id="@+id/child_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4c7aa7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1111111111"
                android:textSize="100sp" />
        </com.example.ybk.mybehaviordemo.nextScroll.ScrollChildContainerLayout>

        <com.example.ybk.mybehaviordemo.nextScroll.ScrollChildContainerLayout
            android:id="@+id/child_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#40c45a"
                android:text="222222222222222222222222"
                android:textSize="100sp" />
        </com.example.ybk.mybehaviordemo.nextScroll.ScrollChildContainerLayout>
    </LinearLayout>
</com.example.ybk.mybehaviordemo.nextScroll.ScrollNextContainerLayout>
